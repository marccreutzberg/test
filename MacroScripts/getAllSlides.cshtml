@inherits umbraco.MacroEngines.DynamicNodeContext

@*
	Model = The current page the macro is executed on
			@Model.bodyText

	Parameter = collection of parameter values passed from the macro
			@Paramter.myParam

    Library = utillity library with common methods
    		@Library.NodeById(1233)
*@

@* The fun starts here *@


<ul class="slides">
    @{ 
        var s = (Model.slider);
		if(@Model.HasProperty("slider") && !@Model.IsNull("slider")){
			string[] l = (@s.Split(','));
			if(l.Length > 0){
							foreach (string mediaId in l){
								string imgSrc = (Library.MediaById(@mediaId).umbracoFile);
        <li>
            <img src="@imgSrc" alt="@Library.MediaById(@mediaId).Name" />
        </li>
        }
    }
    }
}

</ul>
